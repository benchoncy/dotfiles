# ~/.zshrc

# oh-my-zsh
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="bstuart"

zstyle ':omz:update' mode auto # autoupdate
zstyle ':omz:update' frequency 30 # frequency 30 days

HIST_STAMPS="yyyy-mm-dd"

source $ZSH/oh-my-zsh.sh

export LANG=en_GB.UTF-8

# enable plugins
plugins=(git)

# preferred editor
EDITOR='vim'

# ENV & PATH
{{ if stat (joinPath .chezmoi.homeDir ".1password/agent.sock") -}}
export SSH_AUTH_SOCK=~/.1password/agent.sock # Let 1password manage SSH keys
{{- end }}
export GEM_HOME="$HOME/.gems"
export GO_HOME="/usr/local/go"
export PATH="$PATH:$HOME/bin:/usr/local/bin:$HOME/.local/bin:$GEM_HOME:$GO_HOME"

# aliases
alias zshconfig="chezmoi edit ~/.zshrc"
alias py=python3

# git aliases
alias gs='git status'
alias gc='git commit'
alias gp='git pull --rebase'
alias gcam='git commit -am'

# nix
if [ -e $HOME/.nix-profile/etc/profile.d/nix.sh ]; then
  . $HOME/.nix-profile/etc/profile.d/nix.sh;
fi
