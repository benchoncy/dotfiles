# ~/.zshrc

# oh-my-zsh
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="bstuart"

HIST_STAMPS="yyyy-mm-dd"

source $ZSH/oh-my-zsh.sh

export LANG=en_GB.UTF-8

# enable plugins
plugins=(
  git
  kubectl
)

# preferred editor
EDITOR='vim'

# ENV and PATH
{{- if (and (stat (joinPath .chezmoi.homeDir ".1password/agent.sock")) (eq .chezmoi.os "linux")) -}}
export SSH_AUTH_SOCK=~/.1password/agent.sock
{{ else if (and (stat (joinPath .chezmoi.homeDir "Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock")) (eq .chezmoi.os "darwin")) }}
export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
{{- end }}
export PATH="$PATH:$HOME/bin:/usr/local/bin:$HOME/.local/bin:$HOME/.local/scripts"

# aliases
alias zshconfig="chezmoi edit ~/.zshrc"

# git aliases
alias gs='git status'
alias gc='git commit'
alias gcam='git commit -am'
